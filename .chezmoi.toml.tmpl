{{- $isWork := or (contains "work" (lower (lower .chezmoi.fullHostname)))  (contains "inatel" (lower .chezmoi.fullHostname)) (contains "iccso" (lower .chezmoi.fullHostname)) (contains "seli" (lower .chezmoi.fullHostname)) (contains "vmx" (lower .chezmoi.fullHostname)) -}}
{{- $isPersonal := not $isWork -}}
{{- $isWsl := or (env "WSL_DISTRO_NAME") (env "IS_WSL") | not | not -}}
{{- $isDevcontainer := or (env "REMOTE_CONTAINERS") (env "CODESPACES") (env "VSCODE_REMOTE_CONTAINERS_SESSION") | not | not -}}
{{- $isGnome := lookPath "gnome-shell" | not | not -}}

sourceDir = "{{ .chezmoi.sourceDir }}"

[data]
  email = "gustavogsb@outlook.com"
  name = "Gustavo Baptista"
  {{- if or (lookPath "code") (lookPath "code-insiders") $isDevcontainer }}
  editor = "code --wait"
  {{- else if lookPath "nano" }}
  editor = "nano"
  {{- else }}
  editor = "vi"
  {{- end }}
  is_personal = {{ $isPersonal }}
  is_work = {{ $isWork }}
  is_wsl = {{ $isWsl }}
  is_devcontainer = {{ $isDevcontainer }}
  is_gnome = {{ $isGnome }}
